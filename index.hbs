{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    <section class="gh-pagehead">
        <header class="gh-pagehead-content">
            <h1 class="gh-pagehead-title">Archiv</h1>

            <div class="gh-pagehead-description">
                {{#if description}}
                    {{description}}
                {{else}}
                   {{plural pagination.total empty="0 Einträge" singular="% Eintrag" plural="% Einträge"}}
                {{/if}}
            </div>
        </header>
    </section>

    {{#get "posts" filter="featured:true" limit="all" as |featured|}}
        {{#if featured}}
            <section class="gh-section gh-section-featured">
                <h3 class="gh-section-title"><span>Angepinnt</span></h3>

                <div class="gh-featured">
                    {{#foreach featured}}
                        {{> loop}}
                    {{/foreach}}
                </div>
            </section>
        {{/if}}
    {{/get}}

    <section class="gh-section">
        <h3 class="gh-section-title"><span>Alle</span></h3>

        <div class="gh-feed">
            {{#get "posts" limit="all"}}
                {{#foreach posts}}
                    {{> loop}}
                {{/foreach}}
            {{/get}}
        </div>
    </section>
</main>